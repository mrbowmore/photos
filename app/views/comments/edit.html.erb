<div class="block">
    <div class="content">            
    <h2 class="title">Edit Comment</h2>
    <div class="inner">
      <% form_for @comment, :url => comment_path(@comment), :html => { :class => :form } do |f| -%>

          <div class="group">
            <%= f.text_area :body, :class => 'text_area' %>
            <span class="description">Edit your comment</span>
          </div>

        <div class="group navform">
          <input type="submit" class="button" value="Save &rarr;" /> or <%= link_to 'Cancel', request.referer %>
        </div>
      <% end -%>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>