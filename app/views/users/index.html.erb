<h1>Listing users</h1>

<table>
  <tr>
    <th>Name</th>
  </tr>

<% for user in @users %>
  <tr>
    <td><%=h user.login %></td>
    <td><%= link_to 'Edit', edit_user_path(user) if user.has_access?(current_user) %></td>
    <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete if user.has_access?(current_user) %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New user', new_user_path if user.has_access?(current_user) %>