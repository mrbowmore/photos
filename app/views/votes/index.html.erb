<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li class="first active"><%= link_to 'List', votes_path %></li>
      <li><%= link_to 'New', new_vote_path %></li>
    </ul>
    <div class="clear"></div>
  </div>          
  <div class="content">          
    <h2 class="title">All Votes</h2>
    <div class="inner">
      <% form_tag "", :class => :form do -%>
        <table class="table">
          <tr>             
            <th class="first">ID</th>
            <th>User_id</th>
            <th>Created at</th>
            <th class="last">&nbsp;</th>
          </tr>
          <% @votes.each do |vote| -%>
          <tr>
            <td>
              <%= vote.id %>
            </td>
            <td>
              <%= link_to vote.user_id, vote_path(vote) %>
            </td>
            <td>
              <%= vote.created_at %>
            </td>
            <td class="last">
              <%= link_to 'show', vote_path(vote) %> |
              <%= link_to 'edit', edit_vote_path(vote) %> |
              <%= link_to 'destroy', vote_path(vote), :method => :delete, :confirm => 'Are you sure?' %>
            </td>
          </tr>          
          <% end -%>
        </table>
        <div class="actions-bar">
          <div class="actions">
          </div>
          
          <div class="clear"></div>
        </div>
      <% end -%>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>