<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li class="first"><%= link_to 'List', votes_path  %></li>
      <li class="active"><%= link_to 'New', new_vote_path %></li>
    </ul>
    <div class="clear"></div>
  </div>          
  <div class="content">            
    <h2 class="title">New Vote</h2>
    <div class="inner">
      <% form_for :vote, :url => votes_path, :html => { :class => :form } do |f| -%>
        
          <div class="group">
            <%= f.label :user_id, "user_id", :class => :label %>
            <%= f.text_field :user_id, :class => 'text_field' %>
            <span class="description">Ex: a simple text</span>
          </div>

          <div class="group">
            <%= f.label :comment_id, "comment_id", :class => :label %>
            <%= f.text_field :comment_id, :class => 'text_field' %>
            <span class="description">Ex: a simple text</span>
          </div>

          <div class="group">
            <%= f.label :photo_id, "photo_id", :class => :label %>
            <%= f.text_field :photo_id, :class => 'text_field' %>
            <span class="description">Ex: a simple text</span>
          </div>

          <div class="group">
            <%= f.label :grade, "grade", :class => :label %>
            <%= f.text_field :grade, :class => 'text_field' %>
            <span class="description">Ex: a simple text</span>
          </div>
        
        <div class="group navform">
          <input type="submit" class="button" value="Save &rarr;" /> or <%= link_to 'Cancel', votes_path %>
        </div>
      <% end -%>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>