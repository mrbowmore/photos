<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li class="first"><%= link_to 'List', photos_path  %></li>
      <li><%= link_to 'New', new_photo_path %></li>
      <li class="active"><%= link_to 'Edit', edit_photo_path %></li>
    </ul>
    <div class="clear"></div>
  </div>          
  <div class="content">            
    <h2 class="title">Edit Photo</h2>
    <div class="inner">
      <% form_for @photo, :url => photo_path(@photo), :html => { :class => :form } do |f| -%>
        
          <div class="group">
            <%= f.label :parent_id, "parent_id", :class => :label %>
            <%= f.text_field :parent_id, :class => 'text_field' %>
            <span class="description">Ex: a simple text</span>
          </div>

          <div class="group">
            <%= f.label :content_type, "content_type", :class => :label %>
            <%= f.text_field :content_type, :class => 'text_field' %>
            <span class="description">Ex: a simple text</span>
          </div>

          <div class="group">
            <%= f.label :filename, "filename", :class => :label %>
            <%= f.text_field :filename, :class => 'text_field' %>
            <span class="description">Ex: a simple text</span>
          </div>

          <div class="group">
            <%= f.label :title, "title", :class => :label %>
            <%= f.text_field :title, :class => 'text_field' %>
            <span class="description">Ex: a simple text</span>
          </div>

          <div class="group">
            <%= f.label :thumbnail, "thumbnail", :class => :label %>
            <%= f.text_field :thumbnail, :class => 'text_field' %>
            <span class="description">Ex: a simple text</span>
          </div>

          <div class="group">
            <%= f.label :size, "size", :class => :label %>
            <%= f.text_field :size, :class => 'text_field' %>
            <span class="description">Ex: a simple text</span>
          </div>

          <div class="group">
            <%= f.label :with, "with", :class => :label %>
            <%= f.text_field :with, :class => 'text_field' %>
            <span class="description">Ex: a simple text</span>
          </div>

          <div class="group">
            <%= f.label :height, "height", :class => :label %>
            <%= f.text_field :height, :class => 'text_field' %>
            <span class="description">Ex: a simple text</span>
          </div>

          <div class="group">
            <%= f.label :album_id, "album_id", :class => :label %>
            <%= f.text_field :album_id, :class => 'text_field' %>
            <span class="description">Ex: a simple text</span>
          </div>

          <div class="group">
            <%= f.label :position, "position", :class => :label %>
            <%= f.text_field :position, :class => 'text_field' %>
            <span class="description">Ex: a simple text</span>
          </div>
        
        <div class="group navform">
          <input type="submit" class="button" value="Save &rarr;" /> or <%= link_to 'Cancel', photos_path %>
        </div>
      <% end -%>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>