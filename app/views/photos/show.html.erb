<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li class="first"><%= link_to '/ Albums', albums_path  %></li>
      <li><%= link_to '/ New album', new_album_path %></li>
      <li><%= link_to '/ Current album', album_path(@photo.album) %></li>
      <li class="active"><%= link_to '/ Photo', photo_path %></li>
      
    </ul>
    <div class="clear"></div>
  </div>          
  <div class="content">
    <div class="inner">
      
        <p>
          <b>filename:</b>
          <%= @photo.filename %>
        </p>

        <p>
          <b>title:</b>
          <%= @photo.title %>
        </p>

      <div style="width: 350px; height: 350px;">
        <%= image_tag @photo.public_filename %>
      </div><br />

      <div style="float: left;">
         <%= link_to "Previous", @photo.higher_item %>
      </div>

      <div style="width: 300px; height:10px; float: left;">
      </div>

      <div style="float: left;">
          <%= link_to "Next", @photo.lower_item %>
      </div>
    </div>        
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>