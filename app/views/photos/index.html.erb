<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li class="first active"><%= link_to 'List', album_@photos_path %></li>
      <li><%= link_to 'New', new_album_photo_path(@album) if current_user %></li>
    </ul>
    <div class="clear"></div>
  </div>          
  <div class="content">          
    <h2 class="title">All Photos</h2>
    <div class="inner">
      <% form_tag "", :class => :form do -%>
        <table class="table">
          <tr>             
            <th class="first"></th>
            <th>Parent_id</th>
            <th>Created at</th>
            <th class="last">&nbsp;</th>
          </tr>
          
          
          <% for photo in @photos -%>
            <br />
            <tr>
              <td><%= link_to image_tag(photo.public_filename (:thumb)), photo %></td>
              <td><%= link_to "Destroy", photo, :confirm => "Are you sure?", :method => :delete  if photo.has_access?(current_user) %></td>
            </tr>


          <% end -%>
          
          
          <% @photos.each do |photo| -%>
          <tr>
            <td>
              <%=  %>
            </td>
            <td>
              <%= link_to image_tag(photo.public_filename (:thumb)), photo %>
            </td>
            <td>
              <%= photo.created_at %>
            </td>
            <td class="last">
              <%= link_to 'show', photo_path(photo) %> |
              <%= link_to 'edit', edit_photo_path(photo) %> |
              <%= link_to "Destroy", photo, :confirm => "Are you sure?", :method => :delete  if photo.has_access?(current_user) %>
            </td>
          </tr>          
          <% end -%>
        </table>
        <div class="actions-bar">
          <div class="actions">
          </div>
          
          <div class="clear"></div>
        </div>
      <% end -%>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>