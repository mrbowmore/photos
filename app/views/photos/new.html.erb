<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li class="first"><%= link_to '/ Albums', albums_path  %></li>
      <li><%= link_to '/ New album', new_album_path %></li>
      <li><%= link_to '/ Current album', album_path(@photo.album) %></li>
       <li class="active"><%= link_to "/ Add Photo", new_album_photo_path(@album) if current_user %></li>
    </ul>
    <div class="clear"></div>
  </div>          
  <div class="content">            
    <h2 class="title">New Photo</h2>
    <div class="inner">
       <% form_for(@photo, :url => album_photos_path(@photo.album), :html => { :multipart => true }) do |f| -%>
           <p>
             <label for="photo">Upload a photo:</label>
             <%= f.file_field :uploaded_data %>
           </p>
           <p>
             <label for="photo">Name your photo:</label>
             <%= f.text_field :title %>
           </p>           
           <p>
             <%= f.submit 'Create' %>
           </p>           
      <% end -%>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'albums/sidebar') -%>