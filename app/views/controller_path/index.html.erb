<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li class="first active"><%= link_to 'List', controller_paths_path %></li>
      <li><%= link_to 'New', new_controller_path_path %></li>
    </ul>
    <div class="clear"></div>
  </div>          
  <div class="content">          
    <h2 class="title">All Albums</h2>
    <div class="inner">
      <% form_tag "", :class => :form do -%>
        <table class="table">
          <tr>             
            <th class="first">ID</th>
            <th>Title</th>
            <th>Created at</th>
            <th class="last">&nbsp;</th>
          </tr>
          <% @albums.each do |album| -%>
          <tr>
            <td>
              <%= album.id %>
            </td>
            <td>
              <%= link_to album.title, controller_path_path(album) %>
            </td>
            <td>
              <%= album.created_at %>
            </td>
            <td class="last">
              <%= link_to 'show', controller_path_path(album) %> |
              <%= link_to 'edit', edit_controller_path_path(album) %> |
              <%= link_to 'destroy', controller_path_path(album), :method => :delete, :confirm => 'Are you sure?' %>
            </td>
          </tr>          
          <% end -%>
        </table>
        <div class="actions-bar">
          <div class="actions">
          </div>
          
          <div class="clear"></div>
        </div>
      <% end -%>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>