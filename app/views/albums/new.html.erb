<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li class="first"><%= link_to '/ Albums', albums_path  %></li>
      <li class="active"><%= link_to '/ New album', new_album_path %></li>
    </ul>
    <div class="clear"></div>
  </div>          
  <div class="content">            
    <h2 class="title">New Album</h2>
    <div class="inner">
      
      <% form_for(@album) do |f| %>

        <p>
          <b>Title</b> <br />
          <%= f.text_field :title %>
        </p>

        <p>
          <%= f.submit "Create Album" %>
        </p>

      <% end %>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>