<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li class="first"><%= link_to 'List', albums_path  %></li>
      <li><%= link_to 'New', new_album_path %></li>
      <li class="active"><%= link_to 'Edit', edit_album_path %></li>
    </ul>
    <div class="clear"></div>
  </div>          
  <div class="content">            
    <h2 class="title">Edit Album</h2>
    <div class="inner">
      <% form_for @album, :url => album_path(@album), :html => { :class => :form } do |f| -%>
        
          <div class="group">
            <%= f.label :title, "title", :class => :label %>
            <%= f.text_field :title, :class => 'text_field' %>
            <span class="description">Ex: a simple text</span>
          </div>

          <div class="group">
            <%= f.label :user_id, "user_id", :class => :label %>
            <%= f.text_field :user_id, :class => 'text_field' %>
            <span class="description">Ex: a simple text</span>
          </div>
        
        <div class="group navform">
          <input type="submit" class="button" value="Save &rarr;" /> or <%= link_to 'Cancel', albums_path %>
        </div>
      <% end -%>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>